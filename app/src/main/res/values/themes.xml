<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Chat" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">#f6f6f6</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Chat" parent="Base.Theme.Chat" />

    <style name="TextAppearanceTopBarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearanceTopBarSubTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#787878</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="CircularShapeAppearanceOverlay">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>